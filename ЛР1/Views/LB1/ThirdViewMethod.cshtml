@using ЛР1.Models;
@model List<FirstModel.Student>
@{
	ViewBag.Title = "ThirdViewMethod";
}

<h2>Рейтинг студентов</h2>

<table class="table" style="width:20%">
	<thead>
		<tr>
			<th class="text-center">Имя</th>
			<th class="text-center">Балл</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var student in Model)
		{
			<tr class="text-center">
				<td>@student.Name</td>
				<td>@student.Score</td>
			</tr>
		}
	</tbody>
</table>